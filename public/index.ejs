<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>aria-modal Demo</title>
    <% for(var i=0; i < htmlWebpackPlugin.files.css.length; i++) {%>
    <link
      type="text/css"
      rel="stylesheet"
      href="<%= htmlWebpackPlugin.files.css[i] %>"
    />
    <% } %>
    <script src="vendor/webcomponents-loader.js" defer></script>
    <script src="vendor/custom-elements-es5-adapter.js" defer></script>
    <% for(var i=0; i < htmlWebpackPlugin.files.js.length; i++) {%>
    <script
      type="text/javascript"
      src="<%= htmlWebpackPlugin.files.js[i] %>"
      defer
    ></script>
    <% } %>
  </head>
  <body>
    <app-page id="app"></app-page>
    <aria-modal
      id="aria-normal-modal"
      app="app"
      node="normal-modal"
      active="active"
      shadow="true"
      aria-label="Normal Modal"
      role="dialog"
      aria-modal="false"
    >
      <normal-modal
        id="normal-modal"
        modalid="aria-normal-modal"
        slot="modal"
      ></normal-modal>
    </aria-modal>
    <aria-modal
      id="aria-animation-modal"
      app="app"
      node="animation-modal"
      active="active"
      shadow="true"
      animation="true"
      aria-label="Animation Modal"
      role="dialog"
      aria-modal="false"
    >
      <animation-modal
        id="animation-modal"
        modalid="aria-animation-modal"
        slot="modal"
      ></animation-modal>
    </aria-modal>
    <aria-modal
      id="aria-custom-animation-modal"
      app="app"
      node="custom-animation-modal"
      active="active"
      hide="hide"
      shadow="true"
      animation="true"
      aria-label="Custom Animation Modal"
      role="dialog"
      aria-modal="false"
    >
      <custom-animation-modal
        id="custom-animation-modal"
        modalid="aria-custom-animation-modal"
        slot="modal"
      ></custom-animation-modal>
    </aria-modal>
    <noscript>
      Javascript is not working. Please checking your browser config.
    </noscript>
  </body>
</html>
